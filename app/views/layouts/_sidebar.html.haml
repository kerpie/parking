			%li
				= link_to "", "#", id: :pinterest_social_link
			%li
				= link_to "", "#", id: :google_social_link
	#pseudo_footer
		%ul
			%li
				= link_to "Términos", "#"
			%li
				= link_to "Parkeame.com", "#"
			%li
				= link_to "Empresa", "#"